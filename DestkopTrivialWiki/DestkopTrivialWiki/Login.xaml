<Window x:Class="DestkopTrivialWiki.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DestkopTrivialWiki" Width="300" Height="350"
        ResizeMode="NoResize"
        mc:Ignorable="d">
    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="10,10,10,10" TextWrapping="Wrap" Text="Login" VerticalAlignment="Center"/>
        <TextBox x:Name="username" HorizontalAlignment="Center" Margin="10,10,10,10" TextWrapping="Wrap" Width="100" Text="" VerticalAlignment="Center"/>
        <TextBox x:Name="password" HorizontalAlignment="Center" Margin="10,10,10,10" TextWrapping="Wrap" Width="100" Text="" VerticalAlignment="Center"/>
        <Button x:Name="button" Content="Login" HorizontalAlignment="Center" Margin="10,10,10,10" VerticalAlignment="Center" Click="button_Click"/>
    </StackPanel>
</Window>
